<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>
		<categories>
			<category name="module.jcoins">
				<parent>module</parent>
			</category>
			
			<category name="jcoins">
				<showorder>4</showorder>
				<options>module_jcoins</options>
			</category>
			
			<category name="jcoins.general">
				<parent>jcoins</parent>
			</category>
			
			<category name="jcoins.receivecoins">
				<parent>jcoins</parent>
			</category>
			
			<category name="jcoins.receivecoins.general">
				<parent>jcoins.receivecoins</parent>
			</category>
		</categories>
		<options>
			<option name="module_jcoins">
				<categoryname>module.jcoins</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions><![CDATA[jcoins]]></enableoptions>
			</option>
			
			<option name="module_jcoins_shop">
				<categoryname>module.jcoins</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
                        
			<option name="module_jcoins_showcopyright">
				<categoryname>module.jcoins</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
                        
			<option name="jcoins_name">
				<categoryname>jcoins.general</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue>JCoins</defaultvalue>
			</option>
			
			<option name="jcoins_statements_deleteafter">
				<categoryname>jcoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>30</defaultvalue>
			</option>
			
			<option name="jcoins_statements_deleteonlytrashed">
				<categoryname>jcoins.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="jcoins_dashboard_sidebar_richest_num">
				<categoryname>jcoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5</defaultvalue>
				<minvalue>1</minvalue>
			</option>
			
			<option name="jcoins_receivecoins_like">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>10</defaultvalue>
			</option>
			
			<option name="jcoins_receivecoins_dislike">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>-5</defaultvalue>
			</option>
			
			<option name="jcoins_receivecoins_createconversation">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5</defaultvalue>
			</option>
			
			<option name="jcoins_receivecoins_addconversationreply">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>2</defaultvalue>
			</option>
			
			<option name="jcoins_receivecoins_useradd">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>50</defaultvalue>
				<minvalue>0</minvalue>
			</option>
			
			<option name="jcoins_receivecoins_login">
				<categoryname>jcoins.receivecoins.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>10</defaultvalue>
			</option>
			
			<option name="message_sidebar_jcoins">
				<categoryname>message.sidebar</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
		</options>
	</import>
	
	<delete>
		<option name="module_jcoins_premiumgroups" />
	</delete>
</data>